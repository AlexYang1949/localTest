.root{
  justify-content: center;
}
.mapView{
    width: 100%;
    height: 100vh;
}

.selectView{
  position: absolute;
  top:0rpx;
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex; 
  flex-direction:row;
  justify-content: center;  
  align-items: center;  
}

.topIconView{
  width: 50rpx;
  height: 80rpx; 
  display: flex;
  align-items: center; 
  justify-content: center;  
}

.topUnIcon{
  width: 34rpx;
  height: 40rpx; 
  margin-left: 20rpx;  
}

